@model CustomerViewModel

@{
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <p class="mt-0 mb-2 fw-semibold text-dark font-18 text-center">@ViewBag.RenderedHtmlTitle</p>
            <form asp-action="AddOrEdit" asp-controller="Customer" asp-route-id="@Model.CustomerID">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerID" value="@Model.CustomerID" />
                <div>
                    <div class="form-group mb-2">
                        <label asp-for="Name" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" value="@Model.Name" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Nhập số điện thoại" value="@Model.PhoneNumber" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="Address" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" value="@Model.Address" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group">
                        <br />
                        <div class="col-md-12 offset-md-5">
                            <div class="d-flex">
                                <div style="margin-right:10px;">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-block" style="width:80px" />
                                </div>
                                <div>
                                    <a asp-controller="Customer" asp-action="Index" class="btn btn-success text-white"><i class="fe-log-out"></i> Close</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- end card-->
</div>